<h1>All restaurants</h1>

<ul>
  <% @restaurants.each do |r| %>
  <li> <%= r.name %> - <%= r.category %>
    <br> <%=  r.address %> - <%= r.phone_number %> - <%= link_to 'See details', restaurant_path(r), class: "btn btn-primary" %> - - <%= link_to 'Add a review', new_restaurant_review_path(r), class: "btn btn-warning" %>
  </li>
  <% end %>
</ul>
<br>
<%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-success" %>
